<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>


<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Contacts</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    @*<li class="breadcrumb-item"><a>Setup</a></li>*@
                    <li class="breadcrumb-item active" aria-current="page"> Contacts </li>
                </ol>
            </nav>
        </div>
        @if (ViewData["SuccessMessage"] != "" && ViewData["SuccessMessage"] != null)
        {
            <div id="mess" class="row" style="display:block">

                <div class="alert alert-success" style="background-color:lightgreen" role="alert">
                    <strong style="color:black">Alert!</strong><hr />
                    @Html.Label("" + ViewData["SuccessMessage"].ToString(), new { @style = "color:black" })
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>

        }
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Contact List</h4>
                        @*<p class="card-description">
                            Contact Info <code>in a Leasing Process</code>
                        </p>*@
                        <a href="/Setup/AddContact" class="btn btn-primary btn-rounded btn-fw">

                            Add Contacts
                        </a>
                        <div class="row">
                            <div class="col-sm-2" style="height:10px"></div>
                        </div>
                        <div class="table-responsive">
                            <div id="demo_infoComp" class="box" style="display:none"></div>
                            <table id="Comp" class="display" style="font-size:12px;color:black">
                                <thead>
                                    <tr>
                                        @*<th width="10%" >
            @Html.DisplayName("Attribute")
        </th>*@

                                        <th>Contact Name</th>
                                        <th>Company</th>
                                        <th>Address 1</th>
                                        <th>City</th>
                                        <th>State</th>
                                        <th>Zip</th>
                                        <th>Email</th>
                                        <th>Birthday</th>

                                        <th width="5%">
                                            Action
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr class="table-striped">
                                        @*<td>
            <div class="d-flex px-2 border-end">
                <div class="my-auto">
                    Rain Meter
                </div>
            </div>

        </td>*@
                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)

                                                </div>
                                            </div>

                                        </td>
                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    @Html.DisplayFor(modelItem => item.Company)

                                                </div>
                                            </div>


                                        </td>
                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    @Html.DisplayFor(modelItem => item.Address)

                                                </div>
                                            </div>


                                        </td>
                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    @Html.DisplayFor(modelItem => item.City)

                                                </div>
                                            </div>


                                        </td>
                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    @Html.DisplayFor(modelItem => item.State)

                                                </div>
                                            </div>


                                        </td>
                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    @Html.DisplayFor(modelItem => item.Zip)

                                                </div>
                                            </div>


                                        </td>
                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    @Html.DisplayFor(modelItem => item.Email)

                                                </div>
                                            </div>


                                        </td>
                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    @*@Html.DisplayFor(modelItem => item.DOB)*@
                                                    @Html.TextBoxFor(modelItem => item.DOB, "{0:yyyy-MM-dd}", new { @style = "font-size:11px", @class = "form-control bg-transparent", @type = "date", @readonly = true })
                                                </div>
                                            </div>


                                        </td>


                                        <td>
                                            <div class="d-flex px-2 border-end">
                                                <div class="my-auto">

                                                    <a href="/Setup/AddContact/@item.Id" class="btnLink" data-toggle="tooltip" title="Update Contact"><i class="mdi mdi-lead-pencil"></i></a>

                                                </div>
                                                <div class="col-sm-1">

                                                </div>

                                                @if (item.IsActive == true)
                                                {
                                                    <div class="my-auto">

                                                        <a href="/Setup/ActiveInactiveContact/@item.Id?IsActive=0" class="btnLink text-success" data-toggle="tooltip" title="Enable / Disable">Enabled</a>

                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="my-auto">

                                                        <a href="/Setup/ActiveInactiveContact/@item.Id?IsActive=1" class="btnLink text-danger" data-toggle="tooltip" title="Enable / Disable">Disabled</a>

                                                    </div>
                                                }

                                            </div>

                                        </td>



                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>

<script>



    function eventFired(type) {
        let n = document.querySelector('#demo_infoComp');
        n.innerHTML +=
            '<div>' + type + ' event - ' + new Date().getTime() + '</div>';
        n.scrollTop = n.scrollHeight;
    }

    new DataTable('#Comp')
        .on('order.dt', () => eventFired('Order'))
        .on('search.dt', () => eventFired('Search'))
        .on('page.dt', () => eventFired('Page'));



</script>

