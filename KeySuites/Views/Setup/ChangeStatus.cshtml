    <script>



        function eventFired(type) {
            let n = document.querySelector('#demo_infoStatus');
            n.innerHTML +=
                '<div>' + type + ' event - ' + new Date().getTime() + '</div>';
            n.scrollTop = n.scrollHeight;
        }

        new DataTable('#ReservStatus')
            .on('order.dt', () => eventFired('Order'))
            .on('search.dt', () => eventFired('Search'))
            .on('page.dt', () => eventFired('Page'));



    </script>

    <script>
        function buttonclickStatus(param) {
            //you can access that value using the variable param.
            //Or you can give any name of your choice.
            $('#Status').val(param); //to put that value in your textbox.
            $('#exampleModalStatus').modal('toggle'); //you can also use 'hide' instead of 'toggle' to close your modal.
        }
    </script>
