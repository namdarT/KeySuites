                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group label-floating">
                                            @Html.Label("Property Name", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.property.Name, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @readonly = true })

                                        </div>
                                    </div>
                                    @*<div class="col-md-3">
                                            <div class="form-group label-floating">
                                                @Html.Label("CheckIn Time", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                                @Html.TextBoxFor(m => m.CheckInTime, "{0:s}", new { @class = "form-control border-dark", @type = "datetime-local", @style = "border-radius:10px", @required = "required" })
                                                @Html.ValidationMessageFor(m => m.CheckInTime)
                                            </div>
                                        </div>*@
                                </div>

                                <hr />
                                <div class="row">


                                    <div class="col-md-3">
                                        <div class="form-group label-floating">
                                            @Html.Label("Property Address", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.property.PropertyAddress, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @readonly = true })

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group label-floating">
                                            @Html.Label("Lease Start Date", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.LeaseStartDate, "{0:yyyy-MM-dd}", new { @class = "form-control border-dark", @type = "date", @min = "1997-01-01", @max = "3030-31-12", @style = "border-radius:10px", @readonly = true })
                                            @Html.ValidationMessageFor(m => m.LeaseStartDate)

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group label-floating">
                                            @Html.Label("Lease End Date", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @*@Html.TextBoxFor(m => m.PropertyStartDate, "{0:s}", new { @class = "form-control border-dark", @type = "datetime-local", @style = "border-radius:10px", @required = "required" })*@
                                            @Html.TextBoxFor(m => m.LeaseEndDate, "{0:yyyy-MM-dd}", new { @class = "form-control border-dark", @type = "date", @style = "border-radius:10px", @readonly = true })
                                            @Html.ValidationMessageFor(m => m.LeaseEndDate)
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group label-floating">
                                            @Html.Label("Management Company", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.property.VendorName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @readonly = true })

                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group label-floating">
                                            @Html.Label("Status", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Status, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @readonly = true })
                                            <a class="btnLink" data-toggle="modal" data-target="#exampleModalStatus" title="Select Status"><i class=" bg-info mdi mdi-search-web"></i></a>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div>
                                        <div id="exampleModalStatus" class="modal" tabindex="-1" role="dialog">
                                            <div class="col-lg-12 grid-margin stretch-card">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h4 class="card-title">Status Lookup</h4>


                                                        <div class="table-responsive">
                                                            <div id="demo_infoStatus" class="box" style="display:none"></div>
                                                            <table id="ReservStatus" class="display" style="font-size:12px;color:black">
                                                                <thead>
                                                                    <tr>


                                                                        <th>Status</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>

                                                                    @foreach (var item in (IEnumerable<Vidly.Models.Status>)ViewBag.Status)
                                                                    {
                                                                        <tr class="table-striped">

                                                                            <td>
                                                                                <a onclick="buttonclickStatus('@item.Statuses')" class="btnLink" data-toggle="tooltip" title="Select Status">
                                                                                    <div class="d-flex px-2 border-end">
                                                                                        <div class="my-auto">

                                                                                            @Html.DisplayFor(modelItem => item.Statuses)

                                                                                        </div>
                                                                                    </div>
                                                                                    </a>
                                                                            </td>



                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    
                                    <div class="col-md-12">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-rounded btn-fw">

                                            Save
                                        </button>
                                        <a href="/Setup/Reservations" class="btn btn-light btn-rounded btn-fw">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
