<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Change Reservation Status</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Setup/Reservations">Reservations</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Change Reservation Status</li>
                </ol>
            </nav>
        </div>
        @if (ViewData["Message"] != "" && ViewData["Message"] != null)
        {
            <div class="row" style="display:block">
                <div class="col-sm-2">

                </div>
                <div class="alert alert-warning" style="background-color:lightcoral" role="alert">
                    @Html.Label("Error: " + ViewData["Message"].ToString(), new { @style = "color:black" })
                </div>
            </div>

        }
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Update Status</h4>

                            @using (Html.BeginForm("ChangeStatus", "Setup"))
                            {


                                <div class="row">

                                    @*<div class="col-md-3">
                                            <div class="form-group label-floating">
                                                @Html.Label("Arrival Instructions", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                                @Html.TextBoxFor(m => m.ArrivalInstructions, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @required = "required" })
                                                @Html.ValidationMessageFor(m => m.ArrivalInstructions)
                                            </div>
                                        </div>*@
                                    <div class="col-md-3">
                                        <div class="form-group label-floating">
                                            @Html.Label("Reservation ID", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.RId, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @readonly = true })

                                        </div>
                                    </div>
                                    @if (Model.quote.lead.ContactType == "Individual")
                                    {
                                        <div class="col-md-3">
                                            <div class="form-group label-floating">
                                                @Html.Label("Client Name", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                                @Html.TextBoxFor(m => m.quote.lead.OcupantName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @readonly = true })

                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-md-3">
                                            <div class="form-group label-floating">
                                                @Html.Label("Client Name", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                                @Html.TextBoxFor(m => m.quote.lead.LeadsName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @readonly = true })

                                            </div>
                                        </div>
