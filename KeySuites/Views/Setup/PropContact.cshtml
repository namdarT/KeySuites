    <script type="text/javascript">
        $(document).ready(function () {
            $(document).on("click", ".classAdd", function () { //
                var rowCount = $('.table-striped').length + 1;
                var contactdiv = '<tr class="table-striped">' +
                    '<td><div class="d-flex px-2 border-end" ><input type="text" name="PropContactFirstName' + rowCount + '" class="form-control" /></div></td>' +
                    '<td><div class="d-flex px-2 border-end" ><input type="text" name="PropContactLastName' + rowCount + '" class="form-control " /></div></td>' +
                    '<td><div class="d-flex px-2 border-end" ><input type="text" name="PropContactEmail' + rowCount + '" class="form-control " /></div></td>' +
                    '<td><div class="d-flex px-2 border-end" ><input type="text" name="PropContactNumber' + rowCount + '" class="form-control " /></div></td>' +
                    
                    '<td><div class="d-flex px-2 border-end" ><button type="button" id="btnDelete" class="deleteContact btn btn btn-danger btn-xs">Remove</button></div></td>' +
                    '</tr>';
                $('#conCoun').append(contactdiv); // Adding these controls to Main table class
            });
        });

        $(document).on("click", ".deleteContact", function () {
            $(this).closest("tr").remove(); // closest used to remove the respective 'tr' in which I have my controls
        });
    </script>
    

