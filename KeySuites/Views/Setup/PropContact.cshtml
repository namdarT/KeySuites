<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Property Contact Lookup</h3>

        </div>
        @if (ViewData["Message"] != "" && ViewData["Message"] != null)
        {
            <div class="row" style="display:block">
                <div class="col-sm-2">

                </div>
                <div class="alert alert-warning" style="background-color:lightcoral" role="alert">
                    @Html.Label("Error: " + ViewData["Message"].ToString(), new { @style = "color:black" })
                </div>
            </div>

        }
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add Contact</h4>

                            @using (Html.BeginForm("PropContact", "Setup"))
                            {


                                <div class="row">
                                    <div class="col-md-4 border-dark-light">
                                        <div class="form-group label-floating ">
                                            @Html.Label("First Name", new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.Item1.PropContactFirstName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.Item1.PropContactFirstName)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Last Name", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Item1.PropContactLastName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.Item1.PropContactLastName)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Email", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Item1.PropContactEmail, new { @class = "form-control border-dark", @type = "email", @style = "border-radius:10px" })
                                            @Html.ValidationMessageFor(m => m.Item1.PropContactEmail)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Contact #", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Item1.PropContactNumber, new { @class = "form-control border-dark", @type = "tel", @placeholder = "e.g. (+1) 111 1111 OR (+1) 1111111 OR (+1)1111111", @style = "border-radius:10px", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.Item1.PropContactNumber)
                                        </div>
                                    </div>


                                </div>


                                <div class="row">

                                    <div class="col-md-4">
