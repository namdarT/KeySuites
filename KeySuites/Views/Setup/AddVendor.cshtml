    <script>
        function allowNumberOnly(e) {
            var vall1 = $('#Zip').val()
            var ascii = (e.which) ? e.which : e.keyCode
            if (ascii > 31 && (ascii < 48 || ascii > 57)) {
                return false;
            }

            else {
                var vall = $('#Zip').val()
                if (vall.length > 4) {
                    return false;
                }
                else {
                    return true;
                }
            }
        }
    </script>
