
@model Vidly.Models.Company
@{ ViewBag.Title = "New";
    Layout = null; }
@{
    ViewData["Title"] = "Add Company Source";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Add Company</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Setup/Company">Companies</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Add Companies </li>
                </ol>
            </nav>
        </div>
        @if (ViewData["Message"] != "" && ViewData["Message"] != null)
        {
            <div class="row" style="display:block">
                <div class="col-sm-2">

                </div>
                <div class="alert alert-warning" style="background-color:lightcoral" role="alert">
                    @Html.Label("Error: " + ViewData["Message"].ToString(), new { @style = "color:black" })
                </div>
            </div>

        }
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add Company</h4>

                            @using (Html.BeginForm("AddCompany", "Setup"))
                            {


                                <div class="row">
                                    <div class="col-md-4 border-dark-light">
                                        <div class="form-group label-floating ">
                                            @Html.Label("Company Name", new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px;background-color:oldlace", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.CompanyName)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Company Contact", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.CompanyContact, new { @class = "form-control border-dark", @type = "varchar", @placeholder = "e.g.(234)-123-4657 or +1-212-456-7890", @style = "border-radius:10px;background-color:oldlace", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.CompanyContact)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Company Email", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.CompanyEmail, new { @class = "form-control border-dark", @type = "varchar", @placeholder = "abc@abc.com", @style = "border-radius:10px;background-color:oldlace" })
                                            @Html.ValidationMessageFor(m => m.CompanyContact)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Website", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Website, new { @class = "form-control border-dark", @type = "varchar", @placeholder = "www.abc.com", @style = "border-radius:10px;background-color:oldlace", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.Website)
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Address 1", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px" })
                                            @Html.ValidationMessageFor(m => m.Website)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Address 2", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Address2, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px" })
                                            @Html.ValidationMessageFor(m => m.Address2)
                                        </div>
                                    </div>

                                </div>


                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("City", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px" })
                                        </div>
                                    </div>  @*Changed By Client to Zip Code*@
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("State", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.State, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @readonly = true })
                                            <a class="btnLink" data-toggle="modal" data-target="#exampleModal" title="Select State"><i class=" bg-info mdi mdi-search-web" style="font-size:large"></i></a>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Zip", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Zip, new { @class = "form-control border-dark", @type = "number", @value = "75881", @onkeypress = "return allowNumberOnly(event)", @style = "border-radius:10px" })
                                            <div id="savealert" class="alert alert-warning" style="background-color:lightcoral; display:none" role="alert">
                                                @Html.Label("Zip code must be valid", new { @style = "color:black" })
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="col-md-4">
                                            <div class="form-group label-floating">
                                                @Html.Label("IsActive", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                                @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control border-dark", @type = "checkbox", @style = "border-radius:10px" })
                                            </div>
                                        </div>*@

                                </div>
                                <div class="row">
                                    <div id="exampleModal" class="modal" tabindex="-1" role="dialog">
                                        <div class="col-lg-12 grid-margin stretch-card">
                                            <div class="card">

                                                <div class="card-body">
                                                    <h4 class="card-title">States Lookup</h4>
                                                    @Html.Partial("_States", (IEnumerable<Vidly.Models.States>)ViewBag.States)
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">

                                </div>
                                <div class="row">

                                </div>
                                <div class="row">

                                </div>
                                <div class="row">
                                    @Html.HiddenFor(m => m.CompanyId)
                                    <div class="col-md-12">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-rounded btn-fw" onclick="return zipcheck()">

                                            Save
                                        </button>
                                        <a href="/Setup/Company" class="btn btn-light btn-rounded btn-fw">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
