
@model Tuple<Vidly.Models.VwAppUserAsset, IEnumerable<Vidly.Models.CountryCodes>>
@{ ViewBag.Title = "New";
    Layout = null; }



<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary">
                    <h4 class="title">Add Sensor</h4>
                    <p class="category">Insert or update Sensor data down below.</p>
                </div>
                <div class="card-content">
                    @using (Html.BeginForm("Save", "Sensor"))
                    {


                    <div class="row">
                        <div class="col-md-3">
                            <div class="label-floating" style="color:black">
                                @Html.Label("Sensor Name", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                @Html.TextBoxFor(m => m.Item1.asset_name, new { @class = "form-control border-dark", @style = "border-radius:10px", @required = "required" })
                                @Html.ValidationMessageFor(m => m.Item1.asset_name)
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group label-floating">
                                @Html.Label("Series Name", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                @Html.TextBoxFor(m => m.Item1.folder_Id, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @required = "required" })
                                @Html.ValidationMessageFor(m => m.Item1.folder_Id)
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group label-floating">
                                @Html.Label("External ID", new { @class = "control-label ", @style = "font-size:12px;color:black" })
                                @Html.TextBoxFor(m => m.Item1.external_id, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group label-floating">
                                @Html.Label("Serial #", new { @class = "control-label ", @style = "font-size:12px;color:black" })
                                @Html.TextBoxFor(m => m.Item1.deviceSN, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @required = "required" })
                            </div>
                        </div>

                    </div>


                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group label-floating">
                                    @Html.Label("Latitude", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.TextBoxFor(m => m.Item1.latitude, new { @class = "form-control border-dark", @type = "number", @step = "any", @style = "border-radius:10px" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group label-floating">
                                    @Html.Label("Longitude", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.TextBoxFor(m => m.Item1.longitude, new { @class = "form-control border-dark", @type = "number", @step = "any", @style = "border-radius:10px" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group label-floating">
                                    @Html.Label("City", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.TextBoxFor(m => m.Item1.city, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group label-floating">
                                    @Html.Label("Zip", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.TextBoxFor(m => m.Item1.zip, new { @class = "form-control border-dark", @type = "number", @style = "border-radius:10px" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group label-floating">
                                    @Html.Label("Address 1", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.TextBoxFor(m => m.Item1.street_address_1, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group label-floating">
                                    @Html.Label("Address 2", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.TextBoxFor(m => m.Item1.street_address_2, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group label-floating">
                                    @Html.Label("State", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.TextBoxFor(m => m.Item1.state_cd, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group label-floating">
                                    @Html.Label("Teritory", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.DropDownList("Country", ViewBag.Country as IEnumerable<SelectListItem>, new { @class = "  bg-gradient-faded-light dropdown-toggle" })
                                    @Html.ValidationMessageFor(m => m.Item1.country)
                                </div>
                            </div>
                            @*<div class="col-md-4">
            <div class="form-group label-floating">
                @Html.Label("Active", new { @class = "control-label", @style = "font-size:12px;color:black" })
                @Html.CheckBoxFor(m =>m.Item1.active_ind , new { @class = "checkbox  bg-gradient-faded-light"})

            </div>
        </div>*@
                        </div>
                        <div class="row">

                        </div>
                        <div class="row">

                        </div>
                        <div class="row">

                        </div>
                        <div class="row">

                        </div>
                        <div class="row">

                        </div>
                        <div class="row">

                        </div>
                        <div class="row">

                        </div>
                        <div class="row">
                            @Html.HiddenFor(m => m.Item1.asset_id)
                            <div class="col-md-12">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-info">
                                    <i class="material-icons">save</i>
                                    Save
                                </button>
                                <a href="/Sensor/SensorCancle" class="btn btn-default">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link rel="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
          type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"
            type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script>
        $(function () {
            $(".selectpicker").selectpicker();
        });
    </script>
}
