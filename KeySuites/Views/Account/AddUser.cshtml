
@model Vidly.Models.User
@{ ViewBag.Title = "New";
    Layout = null; }
@{
    ViewData["Title"] = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Add User</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Account/Users">Users</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Add Users </li>
                </ol>
            </nav>
        </div>
        @if (ViewData["Message"] != "" && ViewData["Message"] != null)
        {
            <div class="row" style="display:block">
                <div class="col-sm-2">

                </div>
                <div class="alert alert-warning" style="background-color:lightcoral" role="alert">
                    @Html.Label("Error: " + ViewData["Message"].ToString(), new { @style = "color:black" })
                </div>
            </div>

        }
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add User</h4>

                            @using (Html.BeginForm("AddUser", "Account"))
                            {

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group label-floating">
                                    @Html.Label("User Type", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                    @Html.DropDownList("UserType", ViewBag.UserType as IEnumerable<SelectListItem>, new { @class = "  btn btn-success", @style = "font-size:12px;color:black" })
                                    @Html.ValidationMessageFor(m => m.UserType)
                                </div>
                            </div>
                        </div>
                                <div class="row">
                                    <div class="col-md-4 border-dark-light">
                                        <div class="form-group label-floating ">
                                            @Html.Label("First Name", new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.FirstName)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Last Name", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.LastName)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Email", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-dark", @type = "email", @style = "border-radius:10px" })
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Phone Number", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control border-dark", @type = "varchar", @placeholder = "e.g.(234)-123-4657 or +1-212-456-7890", @style = "border-radius:10px", @required = "required" })
                                            @Html.ValidationMessageFor(m => m.Phone)
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("Password", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control border-dark", @type = "password", @style = "border-radius:10px" })
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            @Html.Label("UserName", new { @class = "control-label", @style = "font-size:12px;color:black" })
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control border-dark", @type = "varchar", @style = "border-radius:10px" })
                                            @Html.ValidationMessageFor(m => m.UserName)
                                        </div>
                                    </div>

                                </div>


                                <div class="row">
                                    
                                </div>
                                <div class="row">

                                </div>
                                <div class="row">

                                </div>
                                <div class="row">

                                </div>
                                <div class="row">

                                </div>
                                <div class="row">
                                    @Html.HiddenFor(m => m.Id)
                                    <div class="col-md-12">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-rounded btn-fw">

                                            Save
                                        </button>
                                        <a href="/Account/Users" class="btn btn-light btn-rounded btn-fw">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

