@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control text-bg-light" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control text-bg-light" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control text-bg-light" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>*@

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control text-bg-light" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control text-bg-light" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>User Type</label>
                @Html.DropDownListFor(model => model.UserType, ViewBag.DDLProduct as IEnumerable<SelectListItem>, new { @class = "dropdown-xl  bg-gradient-faded-light dropdown-toggle" })

            </div>
            <div class="form-group">
                <button type="submit" class="btn-primary btn btn-block width100perc">Register</button>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
