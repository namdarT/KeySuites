        <div class="row">
            <div class="col-md-4 col-md-offset-3" style="opacity:10;">
                <section>
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                        @*<div class="login-heading ">@ViewData["Title"]</div>*@
                        <div class="form-group">
                            <h3 class="panel-title">Please Sign In</h3>
                        </div>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control text-bg-light" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control text-bg-light" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserType"></label>
                            @Html.DropDownListFor(model => model.UserType, ViewBag.DDLProduct as IEnumerable<SelectListItem>, new { @class = "dropdown-xl  bg-gradient-faded-light dropdown-toggle" })

                        </div>
                        <div class="form-group bg-gradient-faded-light">
                            <div class="Checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn-primary btn btn-block width100perc">Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a asp-action="ForgotPassword" class="link-danger">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="link-danger">Register as a new user?</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
